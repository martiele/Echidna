                <!--<span class="description">Incluso</span>-->

                <br>
                <br>
                <br>
                <br>

                <div class="form-inputs inputs-float">
                    <label>Inviti al ristorante: </label>
                    <input type="text" class="form-control input-quantity" data-sumcalc="<?=$item->id?>"  id="embed_invitation"  value="0">


                </div>
                <div class="form-inputs inputs-float">


                    <label>Inviti party: </label>
                    <input type="text" class="form-control input-quantity" data-sumcalc="<?=$item->id?>"  id="embed_party_invitation"  value="0">


                </div>
                <br>
                {% endif %}


            </form>

            <div class="line-divider p-t2">
            </div>

            {% include 'parti/scheda-prodotto/prodotti-aggiuntivi.twig' with { prodotto : prodotto } %}

            <div class=" ">
                <button class="btn btn-cool btn btn-add-to-cart" form="formProdotto" type="submit"><i class="icon flaticon-shopping66"></i>AGGIUNGI AL CARRELLO</button>

            </div>


            <div class="line-divider">
            </div>
            <div class="divider divider-md">
            </div>


            <div class="divider divider-xs">
            </div>
            <div class="social-buttons">
                <span class="pull-left">Condividi:&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <ul class="socials">
                    <li><a href="https://www.facebook.com/sharer/sharer.php?u=<?=Service(Request)->getCurrentUrl()?>"><span class="icon flaticon-facebook12"></span></a></li>
                    <li><a href="https://twitter.com/home?status=<?=Service(Request)->getCurrentUrl()?>"><span class="icon flaticon-twitter20"></span></a></li>
                    <li><a href="https://plus.google.com/share?url=<?=Service(Request)->getCurrentUrl()?>"><span class="icon flaticon-google10"></span></a></li>
