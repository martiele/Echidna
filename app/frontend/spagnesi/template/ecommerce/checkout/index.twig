{% extends "base/template.twig" %}

{% block content %}

    <main class="checkout">
        {% include "ecommerce/checkout/parti/steps.twig" %}
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h2>Hai gi√† un account?</h2>
